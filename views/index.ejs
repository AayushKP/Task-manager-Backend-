<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheet/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
  </head>
  <body>
    <div class="main-w-full min-h-screen bg-zinc-900">
      <div class="form px-10 py-10">
        <form action="/create" method="post">
          <input
            class="block w-full text-white rounded-md px-5 py-2 bg-zinc-800"
            type="text"
            placeholder="Title goes here"
            name="title"
          />
          <textarea
            class="block w-full text-white rounded-md mt-2 px-5 py-2 resize-none bg-zinc-800"
            placeholder="Write your task details here..."
            id=""
            cols="30"
            rows="10"
            name="details"
          ></textarea>
          <input
            type="submit"
            value="Create Task"
            class="mt-2 bg-blue-600 rounded-md px-5 py-2"
          />
        </form>
      </div>
     <div class="tasks p-10 flex gap-3 flex-wrap">
  <% if(files.length > 0) { %>
    <% files.forEach(function(val) { %>
      <div class="task w-72 px-3 py-4 bg-zinc-800 rounded-md">
        <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
        <div class="flex w-full justify-between mt-3">
          <a class="text-blue-500 inline-block " href="/file/<%=val %>">Read More</a>
          <a class="text-zinc-600" href="/edit/<%= val %>">edit</a>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <h3 class="text-zinc-600">No Tasks Yet!</h3>
  <% } %>
</div>

  </body>
</html>
